<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SearchingActivity"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="20dp">
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập thông tin cần tìm kiếm"
        android:id="@+id/edt_search"
        android:layout_weight="6"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_white_24dp"
        android:id="@+id/imb_search"
        android:layout_weight="2"/>
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/rv_searched_items">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>