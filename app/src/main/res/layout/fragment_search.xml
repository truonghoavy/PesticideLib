<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_search_by_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/Green"
            android:text="Tìm kiếm theo tên"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_search_by_active_ingredient"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/SlateBlue"
            android:text="Tìm kiếm theo hoạt chất"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_search_by_type"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Crimson"
            android:text="Tìm kiếm theo nhóm"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_search_by_disease"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/MediumVioletRed"
            android:text="Tìm kiếm theo đối tượng phòng trừ"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_search_by_producer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#0245EE"
            android:text="Tìm kiếm theo nhà sản xuất"
            android:textSize="15dp"
            app:backgroundTint="#2C02EE" />
    </LinearLayout>

</FrameLayout>